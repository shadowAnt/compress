<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/aboutme"
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:src="@drawable/aboutme" />

        <ImageView
            android:layout_width="233dp"
            android:layout_height="match_parent"
            android:src="@drawable/title" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#696969" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#317EF3"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/authentic_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/authentic" />

            <TextView
                android:id="@+id/authentic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="认证信息"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#317EF3"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/encode_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/encode" />

            <TextView
                android:id="@+id/encode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="加密"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#317EF3"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/tamper_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tamper" />

            <TextView
                android:id="@+id/tamper_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="篡改"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#317EF3"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/dncode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="解密"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/dncode_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/decode" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
