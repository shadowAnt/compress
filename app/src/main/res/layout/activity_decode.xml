<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdc3c7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:id="@+id/scrollView_decode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到的加密压缩认证的图像:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/decode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/loading" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用来解密的认证图像:" />

            <info.hoang8f.widget.FButton
                android:id="@+id/choose_authentic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="选择认证图像"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowEnabled="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/authentic_decode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:src="@drawable/loading" />

            </LinearLayout>

            <info.hoang8f.widget.FButton
                android:id="@+id/input_dekey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="解密密钥"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowEnabled="true" />

            <TextView
                android:id="@+id/dekeyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="解密密钥" />

            <info.hoang8f.widget.FButton
                android:id="@+id/startButton_decode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="开始解密"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowEnabled="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="5dp"
                android:background="#696969" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="篡改位置：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/loading" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="恢复图像：" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/decodeResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/loading" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="5dp"
                    android:background="#696969" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="对比原始图像：" />

                <Button
                    android:id="@+id/choose_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对比初始图像" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/originImage_decode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/loading" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#696969" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/authenticText_decode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试信息" />
            </LinearLayout>

            <Button
                android:id="@+id/psnrButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算PSNR" />

            <info.hoang8f.widget.FButton
                android:id="@+id/over"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="结束"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                fbutton:buttonColor="@color/fbutton_color_peter_river"
                fbutton:shadowEnabled="true" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
